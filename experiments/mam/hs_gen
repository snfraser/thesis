#!/bin/csh

#
# Generate a set of test groups for a human scheduler to schedule

source /opt/ngat/etc/cshrc

source /occ/bin/class_setup
source /occ/bin/x_setup
source /occ/bin/osx_setup

set ASTRO = "-Dastrometry.impl=ngat.astrometry.TestCalculator"
#set POL = "-Djava.security.policy=file:///occ/tmp/policy.dat"
set POL

java $POL $ASTRO HumanSchedulerTestGenerator \
	--site LT \
        --lat 28.0 --long -17.0 \
        --exec exec1.cfg \
        --root LT_Phase2_001 \
        --log-level 3 \
        --start "2007-11-13 12:00:00" \
	--nights 7 \
	--map map1.map >& hs1.txt


