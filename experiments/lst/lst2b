        --lat 28.0 --long -17.0 \
        --exec exec1.cfg \
	--sexm sex1.cfg \
	--scoring basic --score score2.cfg \
	--cost accounting1.cfg \
	--env env1.cfg \
        --root Test \
        --log-level 1 \
        --start "2008-01-15 13:00:00" \
        --end   "2008-11-15 08:00:00" |& grep Contention >& contb.log&

	
