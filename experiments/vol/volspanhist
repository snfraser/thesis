#!/bin/csh

/usr/bin/gnuplot -persist << EOF
set style data histogram
set boxwidth 10.0 absolute
set style fill solid 1.00 border -1 
set label "Average: {/Symbol r} = 137.2" at screen 0.65, screen 0.75
set xrange [-10:600]
set title "Distribution of values of span ({/Symbol r}) for received updates"
set xlabel "Span ({/Symbol r}) [minutes]"
set ylabel "Number of updates" 
unset key

set term postscript eps enhanced color
set output "vol_span.eps"
plot "vol_span.dat" using 1:3 wi boxes
EOF
