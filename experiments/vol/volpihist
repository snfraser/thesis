#!/bin/csh

/usr/bin/gnuplot -persist << EOF
set style data histogram
set boxwidth 10.0 absolute
set style fill solid 1.00 border -1 
set label "Average: {/Symbol p} = 57.1" at screen 0.65, screen 0.75
set xrange [-10:400]
set title "Distribution of values of proximity ({/Symbol p}) for received updates"
set xlabel "Proximity ({/Symbol p}) [minutes]"
set ylabel "Number of updates" 
unset key

set term postscript eps enhanced color
set output "vol_pi.eps"
plot "vol_pi.dat" using 1:3 wi boxes
EOF
